{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "thinkutils",
  "version": "0.1.4",
  "identifier": "com.vietanhnv.thinkutils",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ThinkUtils",
        "width": 1200,
        "height": 700,
        "minWidth": 700,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "../thinkutils.desktop"
      },
      "rpm": {
        "desktopTemplate": "../thinkutils.desktop"
      }
    }
  }
}
